<h1>User <%= @user.name %></h1>

<h2 class="toggle_next_visibility_uu">Scores:</h2>  <!-- functionality disable, until more content -->
<%= render 'scores' %>

<% if user_is_logged_in(@user.id) %>
  <%= link_to 'Edit Settings', "/users/" + @user.id.to_s + '/edit', :class => "signup_button round" %>
  <%= link_to 'Delete Account', '/logout_and_delete_user?did=' + @user.id.to_s, :confirm => 'Are you sure?' %>
<% end %>

<% if user_is_tester%>
  <ul>
    <li><%= link_to 'Test 1 - info', '/pages/test_page1' %></li>
    <li><%= link_to 'Test 2 - div drag', '/pages/test_page2' %></li>
    <li><%= link_to 'Test 3 - canvas drag', '/pages/test_page3' %></li>
    <li><%= link_to 'Test 4 - simple multi touch canvas drag', '/pages/test_page4' %></li>
    <li><%= link_to 'Test 5 - Puzzle', '/pages/test_page5' %></li>
  </ul>
<% end %>


